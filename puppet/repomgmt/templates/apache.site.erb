<VirtualHost *:<%= port %>>
    ServerName <%= hostname %>
    DocumentRoot /home/<%= user %>/www

    Alias /static /home/<%= user %>/www/static
    Alias /tbdownload /var/lib/schroot/tarballs
    Alias /repos /home/<%= user %>/public
    Alias /buildlogs /home/<%= user %>/buildlogs

    <Directory /home/<%= user %>/public>
        Options Indexes
        Order allow,deny
        Allow from all
    </Directory>

    WSGIScriptAlias / /home/buildd/www/www/wsgi.py
    WSGIDaemonProcess buildd user=buildd
    WSGIProcessGroup buildd
</VirtualHost>
